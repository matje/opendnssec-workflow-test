<grammar xmlns="http://relaxng.org/ns/structure/1.0" datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">
  <start>
    <element name="Configuration">
      <!-- List of all known Key Repositories (aka HSM:s) -->
      <element name="RepositoryList">
        <zeroOrMore>
          <element name="Repository">
            <!-- Symbolic name of repository -->
            <attribute name="name">
              <data type="string"/>
            </attribute>
            <!-- PKCS#11 Module (aka shared library) -->
            <element name="Module">
              <data type="string"/>
            </element>
            <!-- PKCS#11 Token Label, -->
            <element name="TokenLabel">
              <data type="string"/>
            </element>
            <!-- PKCS#11 Login Credentials -->
            <element name="PIN">
              <data type="string"/>
            </element>
            <optional>
              <!--
                Maxmimum number of key pairs in the repository
                DEFAULT: infinite
              -->
              <element name="Capacity">
                <data type="positiveInteger"/>
              </element>
            </optional>
            <optional>
              <!-- Require backup of keys before use (optional) -->
              <element name="RequireBackup">
                <empty/>
              </element>
            </optional>
            <optional>
              <!-- Do not maintain public keys in the repository (optional) -->
              <element name="SkipPublicKey">
                <empty/>
              </element>
            </optional>
          </element>
        </zeroOrMore>
      </element>
      <!-- Common configuration options -->
      <element name="Common">
        <optional>
          <!-- Configuration parameters for logging -->
          <element name="Logging">
            <element name="Syslog">
              <!-- syslog facility -->
              <element name="Facility">
                <ref name="syslogFacility"/>
              </element>
            </element>
          </element>
        </optional>
        <!-- Location to find the KASP file -->
        <element name="PolicyFile">
          <data type="string"/>
        </element>
        <!-- Location to store the zonelist XML file -->
        <element name="ZoneListFile">
          <data type="string"/>
        </element>
        <optional>
          <!-- Location to store the zonefetch XML file (optional) -->
          <element name="ZoneFetchFile">
            <data type="string"/>
          </element>
        </optional>
      </element>
      <!-- Configuration parameters for the KASP Enforcer -->
      <element name="Enforcer">
        <optional>
          <!-- User & group to drop privs to -->
          <ref name="privs"/>
        </optional>
        <!-- Where to store internal Enforcer state -->
        <element name="Datastore">
          <choice>
            <ref name="mysql"/>
            <ref name="sqlite"/>
          </choice>
        </element>
        <!-- Interval between runs of the key rollover procedure -->
        <element name="Interval">
          <data type="duration"/>
        </element>
        <optional>
          <!-- Use manual key generation? -->
          <element name="ManualKeyGeneration">
            <empty/>
          </element>
        </optional>
        <optional>
          <!-- How long before a KSK Rollover should we start warning (optional) -->
          <element name="RolloverNotification">
            <data type="duration"/>
          </element>
        </optional>
        <optional>
          <!--
            Command to use for submitting new DS records to a parent -
            the command should accept DNSKEY RRsets via STDIN
          -->
          <element name="DelegationSignerSubmitCommand">
            <data type="string"/>
          </element>
        </optional>
      </element>
      <optional>
        <!-- Configuration parameters for the Signer -->
        <element name="Signer">
          <optional>
            <!-- User & group to drop privs to -->
            <ref name="privs"/>
          </optional>
          <optional>
            <!--
              Location to store intermediate zone information
              DEFAULT: $(localstatedir)/opendnssec/tmp
            -->
            <element name="WorkingDirectory">
              <data type="string"/>
            </element>
          </optional>
          <optional>
            <!--
              Location of the signer tools
              DEFAULT: $(libexecdir)/opendnssec
            -->
            <element name="ToolsDirectory">
              <data type="string"/>
            </element>
          </optional>
          <optional>
            <!--
              Number of Worker Threads
              DEFAULT: 4
            -->
            <element name="WorkerThreads">
              <data type="positiveInteger"/>
            </element>
          </optional>
          <optional>
            <!--
              Number of Signer Threads
              DEFAULT: 4
            -->
            <element name="SignerThreads">
              <data type="positiveInteger"/>
            </element>
          </optional>
          <optional>
            <!--
              System command to call after a zone has been (re)signed
              
              '%zone' in the string will be replaced by the zone name
              '%zonefile' in the string will be replaced by the zone file
            -->
            <element name="NotifyCommand">
              <data type="string"/>
            </element>
          </optional>
        </element>
      </optional>
      <optional>
        <element name="Auditor">
          <optional>
            <!-- User & group to drop privs to -->
            <ref name="privs"/>
          </optional>
          <optional>
            <!--
              Location to store intermediate audit information
              DEFAULT: $(localstatedir)/opendnssec/tmp
            -->
            <element name="WorkingDirectory">
              <data type="string"/>
            </element>
          </optional>
        </element>
      </optional>
    </element>
  </start>
  <define name="syslogFacility">
    <choice>
      <value>kern</value>
      <value>user</value>
      <value>mail</value>
      <value>daemon</value>
      <value>auth</value>
      <value>lpr</value>
      <value>news</value>
      <value>uucp</value>
      <value>cron</value>
      <value>local0</value>
      <value>local1</value>
      <value>local2</value>
      <value>local3</value>
      <value>local4</value>
      <value>local5</value>
      <value>local6</value>
      <value>local7</value>
    </choice>
  </define>
  <define name="privs">
    <element name="Privileges">
      <optional>
        <!-- DEFAULT: do not drop privs -->
        <element name="User">
          <data type="string"/>
        </element>
      </optional>
      <optional>
        <!-- DEFAULT: do not drop privs -->
        <element name="Group">
          <data type="string"/>
        </element>
      </optional>
    </element>
  </define>
  <define name="mysql">
    <element name="MySQL">
      <optional>
        <element name="Host">
          <optional>
            <!-- DEFAULT: 3306 -->
            <attribute name="port">
              <data type="positiveInteger">
                <param name="maxInclusive">65535</param>
              </data>
            </attribute>
          </optional>
          <!-- DEFAULT: 127.0.0.1 -->
          <data type="string"/>
        </element>
      </optional>
      <!-- database to use for KASP tables -->
      <element name="Database">
        <data type="string"/>
      </element>
      <!-- username and password used to connect to database -->
      <element name="Username">
        <data type="string"/>
      </element>
      <element name="Password">
        <data type="string"/>
      </element>
    </element>
  </define>
  <define name="sqlite">
    <element name="SQLite">
      <data type="string"/>
    </element>
  </define>
</grammar>
