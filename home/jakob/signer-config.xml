<?xml version="1.0" encoding="UTF-8"?>

<!-- $Id$ -->

<signer-config>
	<zone>
		<name>opendnssec.org</name>

		<adapters>
			<input type="file"/>
			<output type="file"/>
		</adapters>

		<signatures>
			<resign unit="seconds">2880</resign> 
			<refresh unit="seconds">259200</refresh>
			<validity>
					<default unit="seconds">604800</default>
					<nsec unit="seconds">1209600</nsec>
			</validity>
			<jitter unit="seconds">86400</jitter>
			<clockskew unit="seconds">300</clockskew>
	
			<ksk keyid="1234"/>
			<zsk keyid="4567"/>
		</signatures>
		
		<publish keyid="1234"/>
		
		<keystore>
	   		<key id="1234">
	   			<name>opendnssec.org</name>
	   			<ttl unit="seconds">3600</ttl>
	   			<flags>257</flags>
	   			<protocol>3</protocol>
	   			<algorithm>5</algorithm>
			
				<!-- key locator is usually matched against PKCS#11 CKA_ID -->
				<locator>da4a25dbb8bfc18f0deea12ed9a549d9f7dba4c8</locator>
			</key>	
				
	   		<key id="4567">
	   			<name>opendnssec.org</name>
	   			<ttl unit="seconds">3600</ttl>
	   			<flags>256</flags>
	   			<protocol>3</protocol>
	   			<algorithm>5</algorithm>
			
				<!-- key locator is usually matched against PKCS#11 CKA_ID -->
				<locator>key42:opendnssec.org</locator>
			</key>		
		</keystore>
		
		<denial>
			<!-- optionally <nsec/> -->
			
			<nsec3param id="4242"/>
	
			<nsec3chain id="4242">
				<zone>opendnssec.org</zone>
		
				<opt-out>yes</opt-out>
		
				<hash>
					<algorithm>SHA-1</algorithm>
					<iterations>10</iterations>					
					<salt>vea8vaa0Gu</salt>
				</hash>
		
				<ttl unit="seconds">3600</ttl>		
			</nsec3chain>
		</denial>
	</zone>
	
	<!-- <zone>...</zone> -->
	<!-- <zone>...</zone> -->
	<!-- <zone>...</zone> -->
	
</signer-config>
