<Adapter>
 	<DNS>
		<CGA-TSIG>
                       
                        <!-- TSIG algrithm Name -->
                        <Algorithm>cga-tsig</Algorithm>
                        <!-- Algorithm type is the public key algorithm 
                        rsa = 1
                        ecc = 0
                        -->
                        <AlgorithmKey>1</AlgorithmKey>
                        
                        <!-- Algorithm type is Address generation Algorithm
                        0 : Generate by the DNS service
                        1 : CGA
                        2 : SSAS http://tools.ietf.org/html/draft-rafiee-6man-ssas
                        -->
                        <AlgorithmType>1</AlgorithmType>
                        <!-- If CGA  -->
                         <!-- CGA Modifier -->
                        <Modifer></Modifier>
			<!-- DAD Counter -->
			<CollisionCount>0</CollisionCount>
                         <!-- End CGA  -->
			<!-- Public/Private Key -->
			<KeyPath>/Key/</KeyPath>
                        <!-- Key size in case the DNS service generates the keys itself -->
                        <Keysize>1280</Keysize>
                        <!-- SSAS parameters -->
                        <version>1</version>
                        <!-- DNS server Address -->
                        <RemoteAddress>2001:abc::1</RemoteAddress>
		</CGA-TSIG>

	</DNS>
</Adapter>
