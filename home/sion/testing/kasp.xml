<KASP>

	<Policy name="default">
		<Description>A default policy that will amaze you and your friends</Description>
		<Signatures>
			<Resign>PT6M</Resign>
			<Refresh>PT30M</Refresh>
			<Validity>
					<Default>PT4M</Default>
					<Denial>PT4M</Denial>
			</Validity>
			<Jitter>PT10M</Jitter>
			<InceptionOffset>PT300S</InceptionOffset>
		</Signatures>

        <Denial>
            <NSEC3>
				<OptOut/>
				<Resalt>P100D</Resalt>
				<Hash>
					<Algorithm>1</Algorithm>
					<Iterations>5</Iterations>
					<Salt length="8"/>
				</Hash>
			</NSEC3>
		</Denial>

		<Keys>
			<!-- Parameters for both KSK and ZSK -->
			<TTL>PT360S</TTL>
			<RetireSafety>PT360S</RetireSafety>
			<PublishSafety>PT360S</PublishSafety>
            <ShareKeys />
            <Purge>PT150S</Purge>

			<!-- Parameters for KSK only -->
			<KSK>
				<Algorithm length="2048">5</Algorithm>
				<Lifetime>PT20M</Lifetime>
				<Repository>softHSM</Repository>
				<Standby>1</Standby>
				<RFC5011/>
			</KSK>

			<!-- Parameters for ZSK only -->
			<ZSK>
				<Algorithm length="2048">5</Algorithm>
				<Lifetime>PT15M</Lifetime>
				<Repository>softHSM</Repository>
                <Standby>1</Standby>
                <ManualRollover />
			</ZSK>
		</Keys>

		<Zone>
			<PropagationDelay>PT360S</PropagationDelay>
			<SOA>
				<TTL>PT360S</TTL>
				<Minimum>PT360S</Minimum>
				<Serial>unixtime</Serial>
			</SOA>
		</Zone>

		<Parent>
			<PropagationDelay>PT360S</PropagationDelay>
			<DS>
				<TTL>PT360S</TTL>
			</DS>
			<SOA>
				<TTL>PT360S</TTL>
				<Minimum>PT360S</Minimum>
			</SOA>
        </Parent>

        <Audit />

	</Policy>

