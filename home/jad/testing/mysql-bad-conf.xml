<Configuration>

	<RepositoryList>
		<Repository name="sca6000">
			<Module>/usr/lib/libpkcs11.so</Module>
			<TokenLabel>Sun Metaslot</TokenLabel>
			<PIN>test:1234</PIN>
			<Capacity>1000</Capacity>
		</Repository>

		<Repository name="softHSM">
			<Module>/usr/local/lib/libsofthsm.so</Module>
			<TokenLabel>alice</TokenLabel>
			<PIN>test:5678</PIN>
		</Repository>
	</RepositoryList>

	<Enforcer>
		<Datastore>
		  <MySQL>
		    <Host port="3306">test1</Host>
		     <Database>test</Database>
		     <Username></Username>
		    <Password/>
		  </MySQL>
		</Datastore>
		<Interval>PT3600S</Interval>
		<KeygenInterval>P3M</KeygenInterval>
		<BackupDelay>P3D</BackupDelay>
	</Enforcer>

	<Signer>
		<WorkingDirectory>/var/dnssec/tmp</WorkingDirectory>
		<ZoneListFile>/var/dnssec/zonelist.xml</ZoneListFile>
		<!-- toolsdir will be removed, but is used for testing atm -->
		<ToolsDirectory>/usr/local/bin</ToolsDirectory>
	</Signer>

</Configuration>