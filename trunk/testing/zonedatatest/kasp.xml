<KASP>
	<Policy name="policy1">
		<Description>A default policy that will amaze you and your friends</Description>
		<Signatures>
			<Resign>PT6M</Resign>
			<Refresh>P4D</Refresh>
			<Validity>
					<Default>P7D</Default>
					<Denial>P7D</Denial>
			</Validity>
			<Jitter>P12H</Jitter>
			<InceptionOffset>PT300S</InceptionOffset>
		</Signatures>

		<Denial>
			<NSEC>
			</NSEC>
		</Denial>

		<Keys>
			<!-- Parameters for both KSK and ZSK -->
			<TTL>PT360S</TTL>
			<RetireSafety>PT360S</RetireSafety>
			<PublishSafety>PT360S</PublishSafety>
			<ShareKeys></ShareKeys>

			<!-- Parameters for KSK only -->
			<KSK>
				<Algorithm length="2048">5</Algorithm>
				<Lifetime>P1Y</Lifetime>
				<Repository>softHSM</Repository>
				<Emergency>2</Emergency>
				<RFC5011/>
			</KSK>

			<!-- Parameters for ZSK only -->
			<ZSK>
				<Algorithm length="1024">5</Algorithm>
				<Lifetime>P1M</Lifetime>
				<Repository>softHSM</Repository>
				<Emergency>2</Emergency>
			</ZSK>
		</Keys>

		<Zone>
			<PropagationDelay>PT360S</PropagationDelay>
			<SOA>
				<TTL>PT360S</TTL>
				<Minimum>PT360S</Minimum>
				<Serial>unixtime</Serial>
			</SOA>
		</Zone>

		<Parent>
			<PropagationDelay>PT360S</PropagationDelay>
			<DS>
				<TTL>PT360S</TTL>
			</DS>
			<SOA>
				<TTL>PT360S</TTL>
				<Minimum>PT360S</Minimum>
			</SOA>
		</Parent>
	</Policy>
	
</KASP>
