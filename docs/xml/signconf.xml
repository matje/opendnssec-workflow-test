<?xml version="1.0" encoding="UTF-8"?>

<!-- $Id$ -->

<SignerConfiguration>
	<Zone name="opendnssec.org">

		<Adapters>
			<Input type="file"/>
			<Output type="file"/>
		</Adapters>

		<Signatures>
			<Resign>PT2H</Resign>
			<Refresh>P3D</Refresh>
			<Validity>
					<Default>P7D</Default>
					<Denial>P14D</Denial>
			</Validity>
			<Jitter>PT12H</Jitter>
			<Clockskew>PT300S</Clockskew>
		</Signatures>

		<Keys>
			<TTL>PT3600S</TTL>

			<Key>
				<Flags>257</Flags>
				<Algorithm>5</Algorithm>

				<!-- key locator is matched against PKCS#11 CKA_ID in hex -->
				<!-- e.g. DFE7265B-783F-4186-8538-0AA784C2F31D -->
				<!-- is written as -->
				<!-- DFE7265B783F418685380AA784C2F31D -->
				<Locator>DFE7265B783F418685380AA784C2F31D</Locator>

				<!-- this key should sign the DNSKEY RRset only -->
				<Sign><Include>DNSKEY</Include></Sign>

				<!-- this key should be published in the zonefile -->
				<Publish/>
			</Key>

			<Key>
				<Flags>256</Flags>
				<Algorithm>5</Algorithm>

				<!-- key locator is matched against PKCS#11 CKA_ID in hex -->
				<Locator>8D76C0C49FEB4A97B8E920C7552401CE</Locator>

				<!-- this key should sign all non-DNSKEY RRsets -->
				<Sign><Exclude>DNSKEY</Exclude></Sign>

				<!-- this key should be published in the zonefile -->
				<Publish/>
			</Key>
		</Keys>

		<Denial>
			<NSEC3>
				<OptOut/>
				<Parameters>
					<TTL>PT3600S</TTL>
				</Parameters>
				<Hash>
					<Algorithm>1</Algorithm>
					<Iterations>10</Iterations>
					<Salt>656d6d6b7469736169646f677461</Salt>
				</Hash>
			</NSEC3>
		</Denial>

		<SOA>
			<TTL>PT3600S</TTL>
			<Minimum>PT3600S</Minimum>
			<Serial>unixtime</Serial>
		</SOA>

	</Zone>
</SignerConfiguration>
