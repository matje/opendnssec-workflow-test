<signconf zone="opendnssec.org">

	<adapters>
		<input type="file"/>
		<output type="file"/>
	</adapters>

	<signatures>
		<reSign>PT2H</reSign> 
		<refresh>P3D</refresh>
		<validity>
				<default>P7D</default>
				<denial>P14D</denial>
		</validity>
		<jitter>PT12H</jitter>
		<clockskew>PT300S</clockskew>

		<ttl>PT3600S</ttl> 

		<ksk keyid="1234"/>
		<zsk keyid="4567"/>
	</signatures>
	
	<publish keyid="1234"/>
	
	<keystore>
		<ttl>PT3600S</ttl>

   		<key id="1234">
   			<flags>257</flags>
   			<algorithm>5</algorithm>
		
			<!-- key locator is usually matched against PKCS#11 CKA_ID -->
			<locator>da4a25dbb8bfc18f0deea12ed9a549d9f7dba4c8</locator>
		</key>	
			
   		<key id="4567">
   			<flags>256</flags>
   			<algorithm>5</algorithm>
		
			<!-- key locator is usually matched against PKCS#11 CKA_ID -->
			<locator>key42:opendnssec.org</locator>
		</key>		
	</keystore>
	
	<denial>
		<ttl>PT3600S</ttl>		

		<nsec3>
			<optOut/>		
			<hash>
				<algorithm>1</algorithm>
				<iterations>10</iterations>					
				<salt>656d6d6b7469736169646f677461</salt>
			</hash>
		</nsec3>
	</denial>
	
	<soa>
		<ttl>PT3600S</ttl>
	    <min>PT3600S</min>
	</soa>
	
</signconf>
