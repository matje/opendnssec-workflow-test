<?xml version="1.0" encoding="UTF-8"?>

<!-- $Id$ -->

<!-- all intervals are xs:duration -->

<kasp>
	
	<rollover>
	  <interval>PT3600S</interval>
	</rollover>
	
	<policy name="default">
	    <description>A default policy that will amaze you and your friends</description>
		<signatures> 
			<re-sign>PT2H</re-sign>
			<refresh>P3D</refresh>
			<validity>
					<default>P7D</default>
					<denial>P14D</denial>
			</validity>
			<jitter>PT12H</jitter>
			<clockskew>PT300S</clockskew>
			<ttl>PT3600S</ttl>
		</signatures>

		<denial>
			<ttl>PT3600S</ttl>						
			<nsec3>
				<opt-out/>
				<re-salt>P100D</re-salt>
				<hash>
					<algorithm>1</algorithm>
					<iterations>10</iterations>					
					<salt length="160"/>
				</hash>
			</nsec3>
		</denial>		

		<keys>
		  <ttl>PT3600S</ttl>
		  <retire-safety>PT3600S</retire-safety>
			<publish-safety>PT3600S</publish-safety>
			
			<!-- Parameters that are different for zsks and ksks -->
			<ksk>
				<algorithm length="2048">5</algorithm>
				<lifetime>P1Y</lifetime>
				<repository>sca6000-1</repository>
				<emergency>2</emergency>
				<rfc5011/>
			</ksk>

			<zsk>
				<algorithm length="1024">5</algorithm>
				<lifetime>P14D</lifetime>
				<repository>SoftHSM-01</repository>
				<emergency>2</emergency>
			</zsk>
		</keys>
		
		<soa>
		  <ttl>PT3600S</ttl>
		  <min>PT3600S</min>
		</soa>
		
		<nameservers>
		  <propagation-delay>PT9999S</propagation-delay>
		</nameservers>
		
		<parent>
		  <TTLds>PT3600S</TTLds>
		  <ds-delay>PT9999S</ds-delay>
		  <propagation-delay>PT9999S</propagation-delay> 
		  <soa>
		    <ttl>PT3600S</ttl>
		    <min>PT3600S</min>
		  </soa>
		</parent>
	</policy>
	
	<zone name="opendnssec.org" policy="default"/>
	
	<!-- <zone ... /> -->
	<!-- <zone ... /> -->
	<!-- <zone ... /> -->
	
</kasp>
