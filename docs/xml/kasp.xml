<?xml version="1.0" encoding="UTF-8"?>

<!-- $Id$ -->

<KASP>

	<Enforcer>
		<Interval>PT3600S</Interval>
		<KeygenInterval>P3M</KeygenInterval>
		<BackupDelay>P3D</BackupDelay>
	</Enforcer>

	<Policy name="default">
		<Description>A default policy that will amaze you and your friends</Description>
		<Signatures>
			<Resign>PT2H</Resign>
			<Refresh>P3D</Refresh>
			<Validity>
					<Default>P7D</Default>
					<Denial>P14D</Denial>
			</Validity>
			<Jitter>PT12H</Jitter>
			<Clockskew>PT300S</Clockskew>
		</Signatures>

		<Denial>
			<NSEC3>
				<OptOut/>
				<Resalt>P100D</Resalt>
				<Parameters>
					<TTL>PT3600S</TTL>
				</Parameters>
				<Hash>
					<Algorithm>1</Algorithm>
					<Iterations>10</Iterations>
					<Salt length="160"/>
				</Hash>
			</NSEC3>
		</Denial>

		<Keys>
			<TTL>PT3600S</TTL>
			<RetireSafety>PT3600S</RetireSafety>
			<PublishSafety>PT3600S</PublishSafety>

			<!-- Parameters that are different for zsks and ksks -->
			<KSK>
				<Algorithm length="2048">5</Algorithm>
				<Lifetime>P1Y</Lifetime>
				<Repository>sca6000-1</Repository>
				<Emergency>2</Emergency>
				<RFC5011/>
			</KSK>

			<ZSK>
				<Algorithm length="1024">5</Algorithm>
				<Lifetime>P14D</Lifetime>
				<Repository>SoftHSM-01</Repository>
				<Emergency>2</Emergency>
			</ZSK>
		</Keys>

		<Zone>
			<PropagationDelay>PT9999S</PropagationDelay>
			<SOA>
				<TTL>PT3600S</TTL>
				<Minimum>PT3600S</Minimum>
				<Serial>unixtime</Serial>
			</SOA>
		</Zone>

		<Parent>
			<PropagationDelay>PT9999S</PropagationDelay>
			<DS>
				<TTL>PT3600S</TTL>
			</DS>
			<SOA>
				<TTL>PT3600S</TTL>
				<Minimum>PT3600S</Minimum>
			</SOA>
		</Parent>
	</Policy>

	<Zone name="opendnssec.org" policy="default">
		<Adapters>
			<Input type="file"/>
			<Output type="file"/>
		</Adapters>
	</Zone>

	<Zone name="opendnssec.se" policy="default">
		<Adapters>
			<Input type="file"/>
			<Output type="file"/>
		</Adapters>
	</Zone>

</KASP>
