<kasp>
	<policy name="default">
		<signatures>
			<!-- all intervals are xs:duration -->
			<resign>PT2H</resign>
			<refresh>P3D</refresh>
			<validity>
					<default>P7D</default>
					<nsec>P14D</nsec>
			</validity>
			<jitter>PT12H</jitter>
			<clockskew>PT300S</clockskew>
		</signatures>

		<denial>
			<ttl>PT3600S</ttl>
			
			<nsec/>

			<!-- ... or ... -->
			
			<nsec3>
				<resalt>P100D</resalt>
				<opt-out/>
				<hash>
					<algorithm>1</algorithm>
					<iterations>10</iterations>					
					<salt>
						<length>160</length>
					</salt>
				</hash>
			</nsec3>
		</denial>		

		<keys>
			<ksk>
				<algorithm length="2048">5</algorithm>
				<lifetime>P1Y</lifetime>
				<overlap>2</overlap>
				<ttl>PT3600S</ttl>
				<rfc5011>yes</rfc5011>
				<repository>sca6000-1</repository>
			</ksk>

			<zsk>
				<algorithm length="1024">RSA</algorithm>
				<lifetime>P14D</lifetime>
				<ttl>PT3600S</ttl>
				<repository>SoftHSM-01</repository>
			</zsk>
		</keys>
	</policy>
	
	<zone name="opendnssec.org" policy="default"/>
	
	<!-- <zone ... /> -->
	<!-- <zone ... /> -->
	<!-- <zone ... /> -->
	
</kasp>
